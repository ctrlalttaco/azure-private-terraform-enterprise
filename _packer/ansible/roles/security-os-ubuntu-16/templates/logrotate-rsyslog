/var/log/boot.log
/var/log/cloud-init.log
/var/log/cron
/var/log/localmessages
/var/log/mail.err
/var/log/mail.info
/var/log/mail.log
/var/log/mail.warn
/var/log/messages
/var/log/news/news.crit
/var/log/news/news.err
/var/log/news/news.notice
/var/log/secure
/var/log/warn
{
	rotate 7
	daily
	missingok
	notifempty
	maxsize 100M
	compress
	nodelaycompress
	create 640 syslog adm
	nodateext
	sharedscripts
	postrotate
		invoke-rc.d rsyslog rotate > /dev/null
	endscript
}
